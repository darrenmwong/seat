 <div class="top">
 <div class="animated animationDelayLong fadeIn">

<div class="authform">

<%= form_for :reservation, :url => user_reservation_path, :method => :patch do |f| %>
  <h1> Edit Form </h1><br>
  <%= f.label "When?" %> <br>


  <%= f.datetime_select :begin, 
   {:twelve_hour => true, :ampm => true, :minute_step => 30,  
    :start_hour => 18, :end_hour => 21} %> <br>

  <%= f.label "For How Many?" %> <br>
  <%= f.number_field :party_size, in: 1..24 %> <br><br>


  <%= f.submit %>
<% end %>
</div>
</div>
</div>
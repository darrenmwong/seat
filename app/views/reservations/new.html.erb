<div class="top">
<div class="authform">
  <div class="animated animationDelayLong fadeIn">
<%= form_for :reservation, :url => user_reservations_path, :method => :post do |f| %>  
  <%= f.label "When?" %> <br>
  <%= f.date_select :begin %>
  <br><br>
  <%= f.time_select :begin, 
   {:twelve_hour => true, :ampm => true, :minute_step => 30,  
    :start_hour => 18, :end_hour => 21} %> <br>

   <br>
    <%= f.label "For How Many?" %>
  <%= f.number_field :party_size, in: 1..24, value: 1 %> 
  
<br>
<br>
<br>

  <%= f.submit class: "button" %>

<% end %>
</div>
</div>



</div>


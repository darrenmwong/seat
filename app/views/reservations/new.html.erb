<div class="authform">
  <div class="resForm"><br><br>
<%= form_for :reservation, :url => user_reservations_path, :method => :post  do |f| %>
  
  <%= f.label "When?" %> <br>
  <%= f.datetime_select :begin, { :twelve_hour => true, :ampm => true, :minute_step => 30,  
    :start_hour => 18, :end_hour => 21} %> <br>

   <br>
    <%= f.label "For How Many?" %>
  <%= f.number_field :party_size, in: 1..24, value: 1 %> 
  
<br>
<br>
<br>
  <%= f.submit %>
<% end %>
</div>
</div>

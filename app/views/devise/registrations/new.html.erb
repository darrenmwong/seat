<div class="top">
 <div class="animated animationDelayLong fadeIn">
    <div class="authform">
  <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => 'flat-color-gradient-19 form_font_style animated fadeIn'}) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
     <%= f.submit 'Sign up', :class => 'button button_width form_font_button' %>
     </div>
  <% end %>
</div>
</div>
</div>

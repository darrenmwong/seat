<body>
  <header class="container-fluid">
    <%= render 'layouts/navigation' %>
  </header>
  <div id="main" id="transparent" role="main">
    <div class="col-md-12 text-center">

  <!-- Section #1 | Brand, and Cloud gif -->
      <section id="first" data-speed="8" data-type="background">  
